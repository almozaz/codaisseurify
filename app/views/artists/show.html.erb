<div class="panel panel-primary">
  <div class="panel-heading"><%= @artist.name %></div>

  <div class="panel-body">
    <h4>Photos</h4>
    <% @artist.photos.each do |photo| %>
      <%= image_tag photo.image.thumbnail %>
    <% end %>

    <h4>About</h4>
    <p><%= @artist.description %></p>

    <br>
    <h4>Songs</h4>
    <% if @artist.songs.any? %>
      <ul id="songlist">
      <% @artist.songs.each do |song| %>
        <li><%= song.name %><%= link_to " [x]", [@artist, song], method: :delete, data: { confirm: "Are you sure?" } %></li>
      <% end %>
      </ul>
      <% else %>
        <p>This artist has no songs yet. Why don't you add some?</p>
      <% end %>

        <div class="panel panel-primary">
          <div class="panel-heading">Add new song</div>

          <div class="panel-body">
            <%= render 'songs/form' %>
          </div>
        </div>

  </div>
</div>

<%= link_to "Update", edit_artist_path(@artist.id), class: "btn btn-default" %>
<%= link_to "Delete", artist_path(@artist.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default" %>
<%= link_to "Back", artists_path, class: "btn btn-default" %>
