<%= form_for @artist do |f| %>
  <div class="form-group">
    <label>Artist</label>
    <%= f.text_field :name, placeholder: "Artist name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description, rows: 5, placeholder: "Say something about this artist", class: "form-control" %>
  </div>

  <label>Publish this artist?</label>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
