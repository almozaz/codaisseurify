<%= form_for @artist, html: { multipart: true } do |f| %>

  <%= @artist.errors.full_messages.first if @artist.errors.any? %>

  <div class="form-group">
    <label>Artist</label>
    <%= f.text_field :name, placeholder: "Artist name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description, rows: 5, placeholder: "Say something about this artist", class: "form-control" %>
  </div>

  <label>Photos</label>

  <div class="form-group">
    <span class="btn btn-default">
      Upload Photos
      <%= file_field_tag "images[]", type: :file, multiple: true %>
      <div id="photos">
        <%= render 'photos/list' %>
      </div>
    </span>
  </div>

  <label>Save your changes</label>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
